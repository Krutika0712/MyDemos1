@model IEnumerable<Website.Models.LoanCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eligibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eligibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loan.LoanName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LoanCategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LoanCategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LoanCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
